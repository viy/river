<div class="flex justify-end mb-1">
  <%= form_with url: list_rivers_path, method: :get, data: { controller: "search-form", search_form_target: "form", turbo_frame: "river_list" } do |form| %>
    <%= form.text_field :name,
                        placeholder: "Search by River name",
                        class: "border border-blue-500 rounded p-2",
                        autocomplete: "off",
                        data: { action: "input->search-form#search" }
    %>
  <% end %>
</div>
<%= turbo_frame_tag "river_list", class: "shadow overflow-hidden rounded border-b border-gray-200" do %>
  <table class='table table-hover' data-controller="search-form">
    <thead>
      <th scope="col">River Name</th>
      <th scope="col">Section</th>
      <th scope="col">Status</th>
      <th scope="col">Grade</th>
    </thead>
    <tbody>
      <%= render partial: 'river', collection: river_list %>
    </tbody>
  </table>
<% end %>